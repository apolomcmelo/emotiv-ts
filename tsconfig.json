{
    "compilerOptions": {
        "module": "esnext",
        "target": "esnext",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "declaration": true,
        "outDir": "./dist", // Changes the outDir to "./dist"
        "rootDir": "./src", // Changes the rootDir to "./src"
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
}
